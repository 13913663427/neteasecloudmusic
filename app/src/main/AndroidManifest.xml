<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.example.taojun.neteasecloudmusic"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:name=".screenadaptation.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/icon_music"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.PhoneLoginActivity"
                  android:label="手机号登陆"/>

        <activity android:name=".activity.MailLoginActivity"
                  android:label="网易邮箱账号登陆">

        </activity>


        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".activity.DrawerLayoutActivity">

        </activity>


        <meta-data
            android:name="design_width_in_dp"
            android:value="1440"/>
        <meta-data
            android:name="design_height_in_dp"
            android:value="2960"/>
    </application>

</manifest>