<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/bg_login2"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="316mm"
            android:layout_height="315mm"
            android:layout_marginStart="562mm"
            android:layout_marginTop="300mm"
            android:src="@mipmap/icon_music"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="116mm"
            android:layout_marginStart="116mm"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_phone_init"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="268mm"
                android:background="@drawable/btn_login"
                android:padding="20mm"
                android:text="手机号登陆"
                android:textColor="#f00"
                android:textSize="54sp"/>

            <Button
                android:id="@+id/btn_mail_init"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="58mm"
                android:background="@drawable/btn_login"
                android:padding="20mm"
                android:text="邮箱登录"
                android:textColor="#f00"
                android:textSize="54sp"/>


        </LinearLayout>
    </LinearLayout>
</RelativeLayout>