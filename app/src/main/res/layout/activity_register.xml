    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#cf00"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="58mm"
        android:layout_marginStart="58mm"
        android:layout_marginTop="174mm"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@mipmap/icon_phone"
            android:text="   +86 "
            android:textSize="52sp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入手机号"
            android:inputType="number"
            android:textSize="52sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="58mm"
        android:layout_marginStart="58mm"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="4mm"
            android:layout_marginTop="36mm"
            android:background="#999"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="108mm"
            android:background="@null"
            android:drawableLeft="@mipmap/icon_lock"
            android:hint="   设置登录密码，不少于6位"
            android:inputType="number"
            android:textSize="52sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="4mm"
            android:layout_marginTop="36mm"
            android:background="#999"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="110mm"
            android:background="@drawable/btn_register"
            android:padding="20mm"
            android:text="下一步"
            android:textColor="#fff"
            android:textSize="56sp"/>


    </LinearLayout>


</LinearLayout>